<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Grades</title>
</head>
<body>
    <h1>Student Grades</h1>
    <ul id="student-list"></ul>
    <p>Total Students: <span id="total-students"></span></p>
    <p>Lowest Score: <span id="lowest-score"></span></p>
    <p>Highest Score: <span id="highest-score"></span></p>
    <p>Average Score: <span id="average-score"></span></p>

    <script>
        const grades = "jim|25, sue|32, mary|34, ann|22, ted|28, frank|15, lisa|19, mike|30, ahn|26, vishaya|27";
        const studentEntries = grades.split(", ");
        const names = [], scores = [];

        studentEntries.forEach(entry => {
            const [name, score] = entry.split("|");
            names.push(name.charAt(0).toUpperCase() + name.slice(1).toLowerCase());
            scores.push(+score);
        });

        names.forEach((name, i) => {
            const li = document.createElement("li");
            li.textContent = `${name} - ${scores[i]}`;
            document.getElementById("student-list").appendChild(li);
        });

        document.getElementById("total-students").textContent = studentEntries.length;
        document.getElementById("lowest-score").textContent = Math.min(...scores);
        document.getElementById("highest-score").textContent = Math.max(...scores);
        document.getElementById("average-score").textContent = (scores.reduce((a, b) => a + b) / scores.length).toFixed(2);
    </script>
</body>
</html>
